<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="awesomegroupkolond.kontraktor.aktivitet3">


    <TextView
        android:id="@+id/textView"
        android:layout_width="265dp"
        android:layout_height="69dp"
        android:text="Er der særlige forhold,
        fx servitutter,
        forsyningsledninger eller forurening,
         der kan få betydning for arbejdets udførelse?"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/checkBox2"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="54dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ja"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="42dp"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textView" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="88dp"
        android:layout_height="31dp"
        android:text="Nej"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="22dp"
        app:layout_constraintRight_toRightOf="@+id/textView"
        android:layout_marginTop="163dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="24dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="276dp"
        android:layout_height="103dp"
        android:text= "Hvis ja, Hvilke?"
        android:ems="10"
        android:inputType="textMultiLine"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="180dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="324dp"
        android:layout_height="71dp"
        android:text="Ved totalentreprise skal entreprenøren afklare de pågældende forhold og forbrugeren skal medvirke hertil, jf.
AB-Forbruger §20."
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="93dp" />

    <Button
        android:id="@+id/cmdNæste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Næste"
        tools:layout_editor_absoluteX="215dp"
        tools:layout_editor_absoluteY="438dp" />


</android.support.constraint.ConstraintLayout>
